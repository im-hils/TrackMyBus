<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:id="@id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="35.0dip"
    android:layout_centerVertical="true"
    android:background="@color/gray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/type5_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="left"
        android:id="@+id/tvTimeRow"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.0dip"
        android:text="@string/tvDep"
        android:layout_weight="1.0" />

    <TextView
        android:textSize="@dimen/type5_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:id="@+id/tvNameRow"
        android:layout_width="0.0dip"
        android:singleLine="false"
        android:ellipsize="none"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:text="@string/tvName"
        android:layout_weight="4.0" />

    <TextView
        android:textSize="@dimen/type5_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/tvClassRow"
        android:layout_width="0.0dip"
        android:maxLines="100"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dip"
        android:text="@string/tvClass"
        android:layout_weight="1.8" />
    <TextView
        android:textSize="@dimen/type5_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/tvDepRow"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dip"
        android:text="@string/tvArr"
        android:layout_weight="1.0" />




</LinearLayout>