<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tr.hilal.trackmybus" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Irtttstyle">
        <activity
            android:label="Travel Assist"
            android:screenOrientation="portrait"

            android:windowSoftInputMode="stateHidden"
            android:name=".Between">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="Passing By Near"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"

            android:name=".Passingby">

        </activity>
        <activity
            android:label="Search Results"
            android:screenOrientation="portrait"
            android:parentActivityName="tr.hilal.trackmybus.Between"
            android:name=".BetweenResult"/>
        <activity
            android:label="Search Results"
            android:parentActivityName="tr.hilal.trackmybus.Passingby"
            android:screenOrientation="portrait"
            android:name=".PassingbyResult"/>
        <activity
            android:label="Search Results"
            android:screenOrientation="portrait"
            android:name=".ListDetails"/>

    </application>

</manifest>
